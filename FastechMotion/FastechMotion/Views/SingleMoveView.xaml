<UserControl x:Class="FastechMotion.Views.SingleMoveView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:FastechMotion.Views"
             mc:Ignorable="d"
             d:DesignHeight="200"
             d:DesignWidth="200"
             Background="White">

    <UserControl.Resources>
        <Style TargetType="Button">
            <Setter Property="Margin"
                    Value="2" />
            <Setter Property="Padding"
                    Value="28 0 35 0" />
            <Setter Property="Background"
                    Value="White" />
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Height"
                    Value="20" />
            <Setter Property="FlowDirection"
                    Value="RightToLeft" />
        </Style>
        <Style TargetType="Label">
            <Setter Property="VerticalAlignment"
                    Value="Center" />
        </Style>
    </UserControl.Resources>
    <Grid>
        <GroupBox Header="Single Move">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Label Content="Cmd Pos" />
                <Label Grid.Row="1"
                       Content="Start Speed" />
                <Label Grid.Row="2"
                       Content="Move Speed" />
                <Label Grid.Row="3"
                       Content="AccelTime" />
                <Label Grid.Row="4"
                       Content="DecelTime" />
                <Button Grid.ColumnSpan="3"
                        Grid.Row="5"
                        Content="ABS Move" />
                <UniformGrid Grid.ColumnSpan="3"
                             Grid.Row="6"
                             Rows="1"
                             HorizontalAlignment="Center">
                    <Button Content="DEC Move" />
                    <Button Content="INC Move" />
                </UniformGrid>
                <TextBox Grid.Column="1"
                         Grid.Row="0"
                         Text="{Binding CmdPos, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                <TextBox Grid.Column="1"
                         Grid.Row="1"
                         Text="{Binding StartSpeed, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                <TextBox Grid.Column="1"
                         Grid.Row="2"
                         Text="{Binding MoveSpeed, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                <TextBox Grid.Column="1"
                         Grid.Row="3"
                         Text="{Binding AccelTime, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                <TextBox Grid.Column="1"
                         Grid.Row="4"
                         Text="{Binding DeccelTime, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                <Label Content="[pulse]"
                       Grid.Row="0"
                       Grid.Column="2" />
                <Label Content="[pps]"
                       Grid.Row="1"
                       Grid.Column="2" />
                <Label Content="[pps]"
                       Grid.Row="2"
                       Grid.Column="2" />
                <Label Content="[msec]"
                       Grid.Row="3"
                       Grid.Column="2" />
                <Label Content="[msec]"
                       Grid.Row="4"
                       Grid.Column="2" />
            </Grid>
        </GroupBox>
    </Grid>
</UserControl>
